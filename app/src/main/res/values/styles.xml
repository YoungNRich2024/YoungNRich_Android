<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <style name="slotFrameLayout">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="slotImageButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/transparency</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:src">@drawable/inventory_slot</item>
    </style>

    <style name="slotImageView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:src">@color/transparency</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="ipadQuizConstraintLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/gold_1</item>
    </style>

    <style name="quizTitleTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">34dp</item>
        <item name="android:layout_marginTop">28dp</item>
        <item name="android:fontFamily">@font/gowunbatang_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <style name="quizContentLinearLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintVertical_bias">0.3</item>
    </style>

    <style name="quiz1TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="quiz1ImageButton">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:background">@color/transparency</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="ipadNavigationImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">26dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:background">@color/transparency</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
    </style>

    <style name="quiz2LineLinearLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="quiz2TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="quiz2ToggleGroup">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">4dp</item>
        <item name="singleSelection">true</item>
        <item name="selectionRequired">true</item>
    </style>

    <style name="quiz2ToggleButton" parent="@style/Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/gowunbatang_bold</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingHorizontal">6dp</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>